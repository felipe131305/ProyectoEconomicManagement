@model Accounts
@{
    ViewData["Title"] = "New Account";
}

<h1>Create account</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create">
    <input type="hidden" asp-for="AccountTypeId" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" autofocus asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"> </span>
    </div>
    <div class="mb-3">
        <label asp-for="Balance" class="form-label"></label>
        <input type="text" asp-for="Money" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"> </span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"> </span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}